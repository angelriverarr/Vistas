@model List<TiendaOnline.Models.Carritos>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiendaOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TiendaOnline.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <header>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light barra1 p-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <a asp-area="" asp-controller="Cliente" asp-action="Index">
                <img src="~/img/logo.png" class="logo barra1" alt="logo">
            </a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a asp-area="" class="nav-link text-white-50" asp-controller="Cliente" asp-action="Index">
                        Home
                    </a></li>

                    <li class="nav-item"><a asp-area="" class="nav-link text-white-50" asp-controller="Cliente" asp-action="Index">
                        Nosotros
                    </a></li>

                        <li class="nav-item"><a asp-area="" class="nav-link text-white-50" asp-controller="Cliente" asp-action="Index">
                        Noticias
                    </a></li>

                    <li class="nav-item dropdown">
                        <a asp-area="" class="nav-link dropdown-toggle text-white-50" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" asp-controller="Home" asp-action="Index">
                        Productos
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a asp-area="" class="dropdown-item" asp-controller="Cliente" asp-action="Index">
                                Todos los productos
                            </a></li>
                            <li><hr class="dropdown-divider" /></li>
                                <li><a asp-area="" class="dropdown-item" asp-controller="Cliente" asp-action="Index">
                                Categoria
                            </a></li>
                                <li><a asp-area="" class="dropdown-item" asp-controller="Cliente" asp-action="Index">
                                Promociones
                            </a></li>
                        </ul>
                    </li>

                        <form class="d-flex col-12">
                        <input class="search container-fluid p-1 bg-light" type="search" placeholder="Ingrese su búsqueda..." aria-label="Search">
                        <button class="btn_buscar" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </ul>
                <div class ="d-inline-flex">
                    <form class="d-flex">
                        <a asp-area="" class="btn btn-outline-warning mt-auto" asp-controller="Cliente" asp-action="Carrito">
                            <i class="fa-solid fa-cart-plus me-1"> Carrito</i>

                                    <span class="badge bg-dark text-white ms-1 rounded-pill cantidad"></span>
                                
                                
                        </a>
                    </form>
                <div class="flex-shrink-0 dropstart m-2">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa-solid fa-circle-user text-white fs-4"></i>
                        </a>
                        <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                        <li><span class="dropdown-item">Nombre usuario</span></li>
                        
                         <li><a asp-area="" class="dropdown-item text-black-50" asp-controller="Cliente" asp-action="Index">
                            Perfil
                        </a></li>

                        <li><hr class="dropdown-divider"></li>
                        <li><a asp-area="" class="dropdown-item text-black-50" asp-controller="Login" asp-action="Login">
                            Salir
                        </a></li>
                        </ul>
                </div>
                </div>
            </div>
           </div>
        </nav>

    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer static-bottom text-muted bg-dark py-5">
        <div class="container-fluid py-4">
           <nav class="navbar navbar-expand-lg navbar-dark">
                    <div class="collapse navbar-collapse">
                        <div class="navbar-nav">
                            <a class="nav-link" href="#"><i class="fa-solid fa-phone"></i>+503 2425-8998</a>
                            <a class="nav-link" href="#"><i class="fa-solid fa-envelope"></i> tecnoes@tecno.sv</a>
                            <a class="nav-link" href="#">Nosotros</a>
                            <a class="nav-link" href="#">Centro de ayuda</a>
                        </div>
                    </div>
                    <div class="d-flex">
                        <a class="nav-link text-white-50" href="#"><i class="fa-brands fa-whatsapp fs-5 redes"></i></a>
                        <a class="nav-link text-white-50" href="#"><i class="fa-brands fa-facebook fs-5 redes"></i></a>
                        <a class="nav-link text-white-50" href="#"><i class="fa-brands fa-instagram fs-5 redes"></i></a>
                        <a class="nav-link text-white-50" href="#"><i class="fa-brands fa-tiktok fs-5 redes"></i></a>
                        <a class="nav-link" href="#"> &copy; 2022 - TiendaOnlinea</a>
                    </div>
            </nav>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/js/all.min.js"></script>
    <script src="https://kit.fontawesome.com/dc3984569d.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
