
@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}
@model IEnumerable<TiendaOnline.Models.Articulos>



<!-- Header-->

<header class="header_index">
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active align-content-center" data-bs-interval="3000">
      <img src="~/img/hogar.png" class="rounded mx-auto d-block w-75  mt-2" alt="...">
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <img src="~/img/hogar.png" class="rounded mx-auto d-block w-75  mt-2" alt="...">
    </div>
    <div class="carousel-item" data-bs-interval="3000">
      <img src="~/img/hogar.png" class="rounded mx-auto d-block w-75  mt-2" alt="...">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</header>

<!--Seccion de las card-->
<section class="py-5 bg-light">
    
     <div class=" container text-center text-black-50">
         @if(@ViewBag.confirmacion != null)
        {
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <strong><i class="fa-solid fa-cart-plus"></i></strong> @ViewBag.confirmacion
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <h1 class="display-4 fw-bolder">Categorias</h1>
        <p class="lead fw-normal text-black-50 mb-0">Busca tu producto por categorias...</p>
    </div>
    <div class="container px-4 px-lg-5 mt-5 ">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in ViewBag.join)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/img/pc-gamer.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder text-black-50">@item.nombre</h5>
                                <!-- Product price-->
                                $@item.precio
                            </div>
                             <div class="text-center">
                                <span>@item.catgoria</span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-3 pt-0 border-top-0 bg-transparent ">
                            <div class="text-center">
                                <div class="text-center">

                                @Html.ActionLink("Ver producto","VerProducto",new{id= @item.id},new{@class="btn btn-outline-dark mt-auto container-fluid"}) 
                               
                            </div>
                                </div>
                        </div>
                    
                        <div class=" p-3 pt-0 border-top-0 bg-transparent container-fluid">
                            <div class="text-center">
                                @Html.ActionLink("Agregar producto","Confirmacion",new{id= @item.id},new{@class="btn btn-outline-dark mt-auto container-fluid"}) 
                               
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


